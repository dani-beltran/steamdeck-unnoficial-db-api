{
  "name": "decku-api",
  "version": "1.0.0",
  "description": "API for Decku game settings",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "biome lint --write ./src",
    "format": "biome check --write ./src",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare-scraper": "playwright install",
    "queue": "node dist/jobs/queue-games.js",
    "scrape": "node dist/jobs/scrape-game.js",
    "generate": "node dist/jobs/generate-game.js"
  },
  "keywords": [
    "api",
    "express",
    "mongodb",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@danilidonbeltran/webscrapper": "^1.6.0",
    "@types/express-session": "^1.18.2",
    "@types/passport": "^1.0.17",
    "@types/passport-steam": "^1.0.6",
    "@types/protobufjs": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.18.2",
    "mongodb": "^6.3.0",
    "passport": "^0.7.0",
    "passport-steam": "^1.0.18",
    "protobufjs": "^7.5.4",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/supertest": "^6.0.2",
    "@types/winston": "^2.4.4",
    "@vitest/coverage-v8": "^1.1.0",
    "mongodb-memory-server": "^9.1.4",
    "supertest": "^6.3.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
